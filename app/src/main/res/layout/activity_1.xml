<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.arnex.pucitacademiccalculator.Activity1"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20sp"
        android:text="Developed by ARNEX"
        android:layout_alignParentBottom="true"
        android:textAlignment="center"
        android:textColor="#000000"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/pucitLogo"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:src="@drawable/pucit_logo"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PUCIT Academic Calculator"
            android:textColor="#000000"
            android:layout_below="@+id/pucitLogo"
            android:textAlignment="center"
            android:textSize="25sp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/textOpt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kindly select the calculator you need"
            android:textColor="#000000"
            android:layout_below="@+id/textTitle"
            android:textAlignment="center"
            android:textSize="15sp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"/>

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/textOpt"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:text="Calculate Semester GPA"
            />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/button1"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:text="Calculate CGPA by Semesters"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/button2"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:text="Calculate CGPA by previous CGPA"/>

    </RelativeLayout>

</RelativeLayout>